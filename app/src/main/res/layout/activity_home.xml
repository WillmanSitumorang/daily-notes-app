<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp"
    android:background="@color/white">

    <!-- App Logo/Title -->
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Notes"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catat setiap momen berharga"
        android:textSize="14sp"
        android:textColor="@color/secondary_text"
        android:layout_marginBottom="32dp"/>

    <!-- Menu Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/newNoteButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Buat Catatan Baru"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:backgroundTint="@color/primary"
            app:cornerRadius="12dp"
            android:layout_marginBottom="16dp"
            app:iconTint="@color/white"
            app:iconPadding="8dp"
            android:elevation="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/showNoteButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Lihat Catatan Saya"
            android:textSize="16sp"
            android:textColor="@color/primary"
            app:strokeColor="@color/primary"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp"
            android:layout_marginBottom="16dp"
            app:iconTint="@color/primary"
            app:iconPadding="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profileButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Profil Saya"
            android:textSize="16sp"
            android:textColor="@color/primary"
            app:strokeColor="@color/primary"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp"
            android:layout_marginBottom="16dp"
            app:iconTint="@color/primary"
            app:iconPadding="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/aboutButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Tentang Aplikasi"
            android:textSize="16sp"
            android:textColor="@color/primary"
            app:strokeColor="@color/primary"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp"
            android:layout_marginBottom="16dp"
            app:iconTint="@color/primary"
            app:iconPadding="8dp"/>

    </LinearLayout>

    <!-- Footer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â© 2025 Daily Notes App"
        android:textSize="12sp"
        android:textColor="@color/secondary_text"
        android:layout_marginTop="40dp"/>
</LinearLayout>