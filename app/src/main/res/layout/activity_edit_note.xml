<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent" android:padding="24dp">

    <EditText android:hint="Judul" android:id="@+id/editTitle" android:layout_width="match_parent" android:layout_height="wrap_content" />
    <EditText android:hint="Isi catatan" android:id="@+id/editContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="5" />
    <Button android:id="@+id/updateButton" android:text="Update" android:layout_width="match_parent" android:layout_height="wrap_content" />
</LinearLayout>